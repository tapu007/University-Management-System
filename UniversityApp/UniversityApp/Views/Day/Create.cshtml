@model University.Models.EntityModels.Day

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Day</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Message != null)
        {
            <div class="alert-danger">
                @ViewBag.Message
            </div>
        }
        @if (ViewBag.DayExistMessage != null)
        {
            <div class="alert-danger">
                @ViewBag.DayExistMessage
            </div>
        }
       
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayName" class="control-label"></label>
                <input asp-for="DayName" class="form-control" />
                <span asp-validation-for="DayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
